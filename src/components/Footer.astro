---
import GithubIcon from "../components/GithubIcon.astro";
import LinkedinIcon from "../components/LinkedinIcon.astro";
---

<footer>
    <a href="https://github.com/heyheynic" target="_blank" aria-label="Link to my GitHub account"> <GithubIcon /></a>
    <a href="https://www.linkedin.com/in/heyheywood/" target="_blank" aria-label="Link to my Linkedin account">
      <LinkedinIcon /></a
    >
</footer>

<style>
  footer {
    grid-column: full;
    border-top: solid var(--dark) 3px;
    
    display: flex;
    justify-content: center;
    gap: clamp(1.125rem, 0.212rem + 4.5652vw, 3.75rem);
    padding: 1rem 3rem;

    svg {
      border-radius: 50%;
      width: clamp(2.125rem, 1.8207rem + 1.5217vw, 3rem);
    }

    a:hover {
      color: var(--accent);
      transition: scale 150ms ease-out;
      scale: 1.1;
    }

    a {
      transition: 200ms ease-in;
    }
  }
</style>
