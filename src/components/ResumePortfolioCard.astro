<div class="card">
  <Image
    src={images[`/src/assets/resume/${img}`]()}
    alt={altText}
    format="avif"
  />
  <div class="text">
    <h2>Title</h2>
    <p>
      Lorem ipsum dolor, sit amet consectetur adipisicing elit. Consectetur
      fugit nostrum quos sint impedit et minima dicta atque asperiores est
      tempore enim deleniti quas doloribus odit, necessitatibus esse dolores
      dolorum.
    </p>
  </div>
</div>

<style>
  .card {
    /* width: 280px;
    height: 360px; */
    /* 375px 300px → 1000px 420px */
    height: clamp(18.75rem, 14.25rem + 19.2vw, 26.25rem);
    /* 375px 460px → 1000px 640px */

    /* width: clamp(28.75rem, 22rem + 28.8vw, 40rem); */

    width: clamp(18.75rem, 14.25rem + 19.2vw, 26.25rem);
    position: relative;
    color: white;
    transition: 0.4s ease-out;
    overflow: hidden;

    &:hover, &:active {
      &:before {
        opacity: 0.5;
      }
      img {
        height: 100%;

        transition: height 0.5s ease-out;
      }
      .text {
        opacity: 1;
        transform: translateY(120px);
      }
    }
    &:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      display: block;
      width: 100%;
      height: 100%;
      background: black;
      z-index: 1;
      opacity: 0;
      transition: 0.5s;
    }
    img {
      width: 100%;
      height: 110%;
      object-fit: cover;
      position: absolute;
      top: 0;
      left: 0;
      z-index: 0;

      :hover, :active {
        transform: translateY(20px);
      }
    }
  }

  .text {
    position: relative;
    z-index: 3;
    opacity: 1;
    transform: translateY(370px);
    transition: 0.5s;
    padding: 0 1em 1em;
  }

  @layer reset {
    /* reset */

    body {
      box-sizing: border-box;
      padding: 0;
      margin: 0;
    }
  }
</style>

