<div class="font sec3" id="sec3">
  <span>
    I want to create <em class="beautiful">beautiful</em>, <em
      class="sustainable">sustainable</em
    > and
    <em class="fun">fun</em> digital solutions
  </span>
</div>

<script>
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  //////// Phase one of scrolling, big text
  gsap.fromTo(
    ".sec3",
    {
      opacity: 0,
      y: 200,
      scale: 0.5,
      scrollTrigger: {
        trigger: ".sec3",
        end: "top center",
      },
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      scrollTrigger: {
        trigger: ".sec3",
        start: "top center",
        // end: "bottom+=50% center",
        end: "bottom+=100% center",
        pin: true,
        pinSpacing: true,
        scrub: true,
        markers: true,
      },
      
    }
  );

  gsap.fromTo(
    ".beautiful",
    { color: gsap.getProperty(".beautiful", "--dark") }, // Initial color
    {
      color: gsap.getProperty(".beautiful", "--accent"), // accent color on scroll
      scrollTrigger: {
        trigger: ".sec3",
        start: "top+=20 center", // Starts after the opacity transition
        end: "bottom center", // Takes up the second half of the scroll
        scrub: true,
        markers: true,
      },
    }
  );

