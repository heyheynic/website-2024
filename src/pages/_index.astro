---
import BaseLayout from "../layouts/BaseLayout.astro";
import PrimaryBtn from "../components/PrimaryBtn.astro";
const pageTitle = "Nicole Heywood";
---

<BaseLayout pageTitle={pageTitle} metaDesc="Nicole Heywood, web developer, web designer, illustrator and graphic designer based in Copenhagen.  ">
  <div class="wrapper">
    <article class="hero">
      <div class="title">
        <h1>Nicole <br /> Heywood</h1>
        <blockquote>
          Certified nerd, CSS enthusiast, book worm and bird lover
        </blockquote>
      </div>
      <div class="img-container index-img">
        <img src="/img/me-intro.png" alt="image of the creator" loading="eager"/>
      </div>
    </article>

    <section class="work__titles">
      <ul>
        <li>Web designer</li>
        <li>Web developer</li>
        <li>Illustrator</li>
        <li>Graphic designer</li>
      </ul>
    </section>

    <section class="buttons">
      <PrimaryBtn btnText="Resume" src="/resume" ariaLabel="Link to resume"/>
      <!-- <PrimaryBtn btnText="Portfolio" src="/portfolio" /> -->
      <PrimaryBtn btnText="Blog" src="/blog" ariaLabel="Link to blog"/>
    </section>
  </div>
</BaseLayout>

<style>
  .wrapper {
    display: grid;
    grid: 1fr auto / 1fr auto;
    align-self: center;
    gap: 1em;
    container: index-wrapper / inline-size;

    .hero {
      grid-column: 1/-1;
      display: grid;
      grid: auto/ 1fr 1fr;

      .title {
        display: flex;
        flex-direction: column;
        gap: 1em;
        h1 {
          line-height: 1;
          position: relative;
        }
        h1::before {
          content: "";
          background-color: var(--accent);
          width: 30rem;
          height: 14rem;
          position: absolute;
          z-index: -1;
          rotate: -26deg;
          top: 1rem;
          left: -18rem;
          z-index: -1;
        }

        blockquote {
          font-style: italic;
        }
      }

      .index-img {
        grid-column: 2;
        place-self: center end;
        padding: 1em 0;

        img {
          width: clamp(10rem, 8.2609rem + 8.6957vw, 15rem);
          height: clamp(10rem, 8.2609rem + 8.6957vw, 15rem);
          border-radius: 50%;
          aspect-ratio: 1;
          object-fit: cover;
        }
      }
    }

    .work__titles {
      font-size: var(--size-1);
      font-weight: 600;
    }
    .buttons {
      grid-row: 2;
      grid-column: 2/-1;
      display: flex;
      justify-content: end;
      align-items: end;
      padding-bottom: 0.5em;
      gap: 2em;
    }
  }

  @media screen and (max-width: 410px) {
    .work__titles {
      display: none;
    }
    .wrapper .hero .index-img {
      grid-column: 1/-1;
      place-self: center;
    }
  }

  @container index-wrapper (width < 580px) {
    .wrapper {
      grid: 1fr 1fr 1fr / auto auto;

      .hero {
        grid-row: 1 / span 2;
        grid-column: 1/-1;
        grid: subgrid / subgrid;

        .title {
          padding-top: 1em;
          grid-row: 1;
          grid-column: 1/-1;
        }

        .index-img {
          grid-row: 2;
        }
      }

      .work__titles {
        grid-column: 1/2;
        grid-row: 2;
        align-self: center;
      }

      .buttons {
        grid-column: 1/-1;
        grid-row: 3;
        justify-content: center;
        padding: 1em 0;
      }
    }
  }
</style>
