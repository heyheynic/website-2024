---
import BaseLayout from "../layouts/BaseLayout.astro";
import PrimaryBtn from "../components/PrimaryBtn.astro";
const pageTitle = "Nicole Heywood";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="index-wrapper">
    <article class="index-hero">
      <div class="title">
        <h1>Nicole <br /> Heywood</h1>
        <blockquote>
          Certified nerd, CSS enthusiast, book worm and bird lover
        </blockquote>
      </div>
      <img
        src="/img/me-intro.png"
        alt="image of the creator"
        class="index-img"
      />
    </article>
    <!-- <section class="buttons">
      <a href="/portfolio">
        <PrimaryBtn btnText="Portfolio" />
      </a>
      <a href="Contact">
        <PrimaryBtn btnText="Contact" />
      </a>
    </section> -->
  </div>
</BaseLayout>

<style>
  .index-wrapper {
    grid-column: breakout;
    display: grid;
    grid: auto / 1fr;
    container: index-wrapper / inline-size;
  }
  .index-hero {
    display: grid;
    grid: auto / 1fr;
    gap: 1em;
    align-items: center;


    h1 {
      line-height: 1;
      position: relative;
    }
    h1::before {
      content: "";
      background-color: var(--accent);
      width: 30rem;
      height: 14rem;
      position: absolute;
      z-index: -1;
      rotate: -26deg;
      top: 1rem;
      left: -18rem;
    }

    .index-img {
      grid-area: 1 / 2 / 1 / 2;
      width: clamp(10rem, 8.2609rem + 8.6957vw, 15rem);
      border-radius: 50%;
      place-self: center end;
      aspect-ratio: 1;
      object-fit: cover;
    }
  }

  .buttons {
    grid-row: 2;
    grid-column: 1;
    display: flex;
    justify-content: end;
    align-items: start;
    gap: 2em;
  }

  @container index-wrapper (width < 450px) {
      .main-hero {
        display: grid;
        grid: 1fr 1fr / 1fr;
      }
      .title {
        justify-items: center;
        place-content: center;
        align-items: center;
        text-align:;
        color: blue;
      }
      .index-me {
        grid-column: 1;
        grid-row: 2;
        background-color: red;
      }
    }
